<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmets.HelpLineFragment">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/statusbar"
        android:background="@color/MenuColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            style="@style/MyStyle"
            android:layout_centerHorizontal="true"
            android:text="@string/AddProduct"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/backArrow"
            android:src="@drawable/ic_backarrow"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/statusbar"
       android:layout_centerHorizontal="true"
        android:id="@+id/tvinformation"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:text="In case of queries"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="270dp"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_below="@+id/tvinformation"
        android:id="@+id/callus"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/light_white_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivphone"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_phone"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvcallus"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:text="Call us"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="270dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/callus"
        android:id="@+id/callonWhatsapp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/light_white_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivwhatsapp"
            android:padding="@dimen/dp_5"
            android:src="@drawable/mywhtasapp"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/tvwhatsapp"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:text="Help on Whatsapp"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="270dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>