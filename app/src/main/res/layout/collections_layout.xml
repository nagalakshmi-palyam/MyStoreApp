<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_marginTop="@dimen/dp_20"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:background="@drawable/light_white_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/whiteColor"
            app:cardCornerRadius="3dp"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/ivimagecollection"
            android:src="@drawable/profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/btnupdate"
                android:background="@drawable/greenround_bg"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"/>
        <TextView
            android:id="@+id/tvcollectionname"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:text="Fashion"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="7dp"
                    android:background="@drawable/check_bg"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="8dp"/>
                    <ImageView
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/check_bg"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="8dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tvproductcount"
                    android:textSize="12sp"
                    android:text="1"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/DarkerGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                android:textSize="12sp"
                android:textColor="@color/DarkerGray"
                android:text="Products"
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <CheckBox
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_below="@+id/llayoutpassword"
            android:id="@+id/checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>