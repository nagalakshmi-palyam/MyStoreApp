<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddProduct"
    android:orientation="vertical">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/statusbar"
        android:background="@color/MenuColor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            style="@style/MyStyle"
            android:layout_centerHorizontal="true"
            android:text="@string/AddProduct"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/backArrow"
            android:src="@drawable/ic_backarrow"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ScrollView
        android:layout_below="@+id/statusbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20">
        <LinearLayout
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            style="@style/myProductStyle"
            android:id="@+id/tvProductImages"
            android:layout_marginTop="@dimen/dp_20"
            android:text="@string/ProductImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/productCard"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/dp_5"
                android:layout_width="70dp"
                android:layout_height="70dp">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/ivProductImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        <EditText
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/BlueColor"
            android:text="@string/AddProductimage"
            android:id="@+id/etAddimage"
            android:layout_marginBottom="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:paddingLeft="90dp"
            android:paddingRight="90dp"
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_bg"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

            <LinearLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:id="@+id/tvAddProduct"
                    style="@style/myProductStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/AddProduct" />

                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/product_bg"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_20">
                    <TextView
                        android:id="@+id/tvslectname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Product Name"
                        android:textColor="@color/DarkerGray"
                        android:textSize="13dp" />

                    <EditText
                        android:textColor="@android:color/black"
                        android:background="@drawable/product_bg"
                        android:id="@+id/etProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:textSize="@dimen/dp_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_weight="1"
                        android:background="@drawable/product_bg"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp_20">
                        <TextView
                            android:id="@+id/tvselectmrp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MRP*"
                            android:textColor="@color/DarkerGray"
                            android:textSize="13dp" />

                        <EditText
                            android:textColor="@android:color/black"
                            android:background="@drawable/product_bg"
                            android:id="@+id/etProductMrp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:textSize="@dimen/dp_15" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_weight="1"
                        android:background="@drawable/product_bg"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp_20">
                        <TextView
                            android:id="@+id/tvselectprice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Selling Price"
                            android:textColor="@color/DarkerGray"
                            android:textSize="13dp" />

                        <EditText
                            android:textColor="@android:color/black"
                            android:background="@drawable/product_bg"
                            android:id="@+id/etSellingPrize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:paddingTop="@dimen/dp_10"
                            android:paddingBottom="@dimen/dp_10"
                            android:textSize="@dimen/dp_15" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@android:color/black" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/product_bg"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tvselect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Unit*"
                        android:textColor="@color/DarkerGray"
                        android:textSize="13dp" />

                    <Spinner
                        android:id="@+id/unitSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_30" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/product_bg"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_20">
                    <TextView
                        android:id="@+id/tvselecdis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Product Discription"
                        android:textColor="@color/DarkerGray"
                        android:textSize="13dp" />

                    <EditText
                        android:textColor="@android:color/black"
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/product_bg"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:textSize="@dimen/dp_15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mylayout"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:background="@drawable/product_bg"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tvcategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add/Choose collection"
                        android:textColor="@color/DarkerGray"
                        android:textSize="13dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvcollection"
                        android:padding="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"/>
                        <ImageView
                            android:layout_marginTop="@dimen/dp_20"
                            android:id="@+id/nextCollection"
                            android:layout_marginLeft="40dp"
                            android:textColor="@android:color/black"
                            android:src="@drawable/ic_next"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/black" />
                </LinearLayout>

                <Button
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:id="@+id/btnaddProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/button_bg"
                    android:padding="@dimen/dp_10"
                    android:text="@string/AddProduct"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />
            </LinearLayout>

    </LinearLayout>
</RelativeLayout>
        </ScrollView>
</RelativeLayout>